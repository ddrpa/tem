{
  "printWidth": 80,
  "trailingComma": "all",
  "tabWidth": 4,
  "semi": true,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": [
        "*.css",
        "*.scss",
        "*.html"
      ],
      "options": {
        "tabWidth": 2
      }
  }]
}
